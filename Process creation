#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>

int main() {
    pid_t pid;

    // Create a new process
    pid = fork();

    if (pid < 0) {
        // Error in creating process
        perror("fork failed");
        return 1;
    } else if (pid == 0) {
        // This block is executed by the child process
        printf("Child Process:\n");
        printf("PID: %d\n", getpid());       // PID of child
        printf("PPID: %d\n", getppid());     // PID of parent
    } else {
        // This block is executed by the parent process
        printf("Parent Process:\n");
        printf("PID: %d\n", getpid());       // PID of parent
        printf("Child PID: %d\n", pid);      // PID of child
    }

    return 0;
}
